$accentColor = #DC143C
$textColor = #2c3e50
$borderColor = #a6a6a6
$codeBgColor = #434852
$shadowColor = #c8c8c8

.theme-container.custom-page-class {
  font-family: "Apple Gothic", "Century Gothic", AppleGothic, CenturyGothic, sans-serif;
  h1 {
    font-size: 24px;
    font-style: normal;
    font-variant: normal;
    font-weight: 700;
    line-height: 26.4px;
  }
  h3 {
    font-size: 18px;
    font-style: normal;
    font-variant: normal;
    font-weight: 700;
    line-height: 24px;
  }
  p {
    font-size: 15px;
    font-style: normal;
    font-variant: normal;
    font-weight: 400;
    line-height: 22px;
  }
  a {
    font-family: CenturyGothic;
    font-size: 15px;
    font-style: normal;
    font-variant: normal;
    font-weight: 500;
    line-height: 22px;
  }
  blockquote {
    font-family: CenturyGothic;
    font-size: 14px;
    font-style: normal;
    font-variant: normal;
    font-weight: 300;
    line-height: 18px;
  }
  pre {
    font-size: 15px;
    font-style: normal;
    font-variant: normal;
    font-weight: 400;
    line-height: 20px;
  }
}

$accentColor = #DC143C
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34

.theme-container.custom-page-class {
  font-family : "Century Gothic", CenturyGothic, AppleGothic, sans-serif;
  h1 {
    font-size : 24px;
    font-style : normal;
    font-variant : normal;
    font-weight : 700;
    line-height : 26.4px;
  }
  h3 {
    font-size : 15px;
    font-style : normal;
    font-variant : normal;
    font-weight : 700;
    line-height : 22px;
  }
  p {
    font-size : 15px;
    font-style : normal;
    font-variant : normal;
    font-weight : 400;
    line-height : 22px;
  }
  blockquote {
    font-size : 14px;
    font-style : normal;
    font-variant : normal;
    font-weight : 300;
    line-height : 18px;
  }
  pre {
    font-size : 15px;
    font-style : normal;
    font-variant : normal;
    font-weight : 400;
    line-height : 20px;
  }
}

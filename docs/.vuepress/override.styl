@import url('https://fonts.googleapis.com/css?family=Century+Gothic');
@import url(https://fonts.googleapis.com/css?family=Ubuntu:400,700,400italic,700italic);
@import url(https://fonts.googleapis.com/css?family=Raleway:600,400&subset=latin,latin-ext);

@charset "UTF-8";

$accentColor = #DC143C
$textColor = #2c3e50
$borderColor = #fff
$codeBgColor = #434852
$shadowColor = #bdbdbd

// Layout
$navbarHeight = 4rem
$sidebarWidth = 20rem
$contentWidth = 800px

.theme-container.custom-page-class {
  font-family: "Apple Gothic", "Century Gothic", Nunito, AppleGothic, CenturyGothic, sans-serif;
  h1 {
    font-size: 28px;
    font-style: normal;
    font-variant: normal;
    line-height: 26.4px;
    margin: 0 0 1.75rem;
    padding: 20px 30px;
    text-align: center;
    font-weight: 555;
    text-transform: uppercase;
  }
  h2 {
    font-size: 23px;
    font-weight: 555;
    line-height: 3rem;
    margin: 0 0 1.9375rem;
    padding: 0 20px;
    text-transform: uppercase;
    margin-top: 3rem
  }
  h3 {
    font-size: 18px;
    font-weight: 666;
    line-height: 2.3rem;
    margin: 0 0 1.7375rem;
    padding: 0 10px;
    margin-top: 2.3rem
  }
  h4 {
    font-weight: normal;
    line-height: 2rem;
    margin: 0 0 1.5375rem;
    padding: 0 5px;
    margin-top: 2rem;
    font-weight: 666;
  }
  h5 {
    font-size: 1.125rem;
    font-weight: normal;
    font-weight: 666;
  }
  h6 {
    font-size: 1rem;
    font-weight: bold;
    font-weight: 666;
  }
  p {
    font-size: 15px;
    font-style: normal;
    font-variant: normal;
    font-weight: 400;
    line-height: 22px;
    color: #111;
    margin: 0 0 1.25rem;
  }
  a {
    font-family: CenturyGothic;
    font-size: 15px;
    font-style: normal;
    font-variant: normal;
    font-weight: 500;
    line-height: 22px;
  }
  blockquote {
    font-family: CenturyGothic;
    font-size: 14px;
    font-style: normal;
    font-variant: normal;
    font-weight: 300;
    line-height: 18px;
    margin: 0 0 1.25rem;
    padding: 0.5rem 0 0 1.05556rem;
    border-left: 2px solid #FFBF00;
  }
  blockquote,
  blockquote p {
    line-height: 1.6;
    color: #6f6f6f;
  }
  pre {
    font-size: 15px;
    font-style: normal;
    font-variant: normal;
    font-weight: 400;
    line-height: 20px;
    margin: 0 0 1.25rem;
  }
  code, .md-fences {
    padding: .5em;
    font-size: 0.9em;
    margin: 0 0 1.35rem;
    margin-left: 0.2em;
    margin-right: 0.2em;
  }

}





